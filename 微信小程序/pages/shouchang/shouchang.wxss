/* pages/shouchang/shouchang.wxss */
page{
  height: 100%;
}
.box1{
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 100%;
  height: 100%;
}
.box1 view{
  text-align: center;
  height: 500rpx;
  align-items: center;
}
.outbox{
  width: 100%;

}
.box{
  width: 100%;
  position: relative;

}
.box image{
  width: 100%;
  height: 250rpx;
  border-radius:10rpx; 
}
.textbox{
  width: 100%;
  height: 100rpx;
  position: absolute;
  top: 50%;
  margin-top:-50rpx; 
  text-align: center;
  color: #fff;
}
.textbox text{
  display: block;
}


