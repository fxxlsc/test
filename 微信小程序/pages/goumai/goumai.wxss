/* pages/goumai/goumai.wxss */
.box{
  width: 100%;
  height: 300rpx;
  border: 2rpx solid #eee;
  border-radius:10rpx; 
  display: flex;
  flex-direction: row;
  justify-content: center;    
  background: #eee;
  margin-bottom: 10rpx;
}
.imgbox{
  height: 240rpx;
  align-self: center;
}
.textbox{
  height: 240rpx;
  align-self: center;
  margin-left: 80rpx;
}
.textbox>view{
  display: flex;
  height: 240rpx;
  flex-direction: column;
  justify-content: space-around;
}
.box image{
  width: 320rpx;
  height: 240rpx;
}
.textbox text{
  display: block;
}
.textbox text:last-child{
  color: red;
}