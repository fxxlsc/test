.box {
    font-family: "微软雅黑"；;
}

.header .header-Text {
    font-size: 24px;
    font-weight: bold;
    margin-left: 10px;
}

.header .header-Tip {
    display: flex;
    justify-content: space-between;
}

.header .header-Tip text {
    margin: 10px 10px;
}

.header  .Text-data {
    margin: 10px 10px;
}

.detail-Text .text-img image {
    width: 100%;
    margin: 40px 0;
}

.webben {
    width: 96%;
    margin-left: 2%;
    text-align: center;
    font-size: 14px;
    line-height: 24px;
}

.pinglun {
    margin-top: 20px;
}

.pinglun .inputEaer {
    display: flex;
    justify-content: space-around;
}

.pinglun .inputEaer input {
    border: 1px solid #ccc;
    flex-basis: 70%;
    margin-left: 2%;
    height: 30px;
}

.pinglun .inputEaer button {
    flex-basis: 20%;
    font-size: 14px;
}

.liuyanqu {
    margin-top: 20px;
    border-bottom: 2px solid red;
}

.liuyanqu .liuyanqu-title {
    font-size: 24px;
    color: red;
}

.pinglun .message {
    /* width: 90%; */
    height: 100px;
    border: 1px solid #ccc;
    margin: 10px 0;
    /* margin-left: 5%; */
}

.message  .user-message {
    display: flex;
    justify-content: space-around;
    align-items: center;
}

.message .user-input text {
    margin: 0 20px;
}

